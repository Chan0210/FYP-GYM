<!DOCTYPE html>
<html>
    <head>
        <title>Main Page</title>
        <link rel="stylesheet" href="header.css">
        <link rel="stylesheet" href="bmi.css">
        <script src="https://kit.fontawesome.com/7c1ce35e86.js" crossorigin="anonymous"></script>
    </head>

    <body>

          <div id="header-placeholder"></div>
          <div class="content-wrapper">
            <h1>BMI Calculator</h1>
            <div class="bmi-circle-background"></div>
            <main class="main-content">
              <div class="bmi-box">
                <div class="bmi-left">
                  <!-- 上排：年龄和性别 -->
                  <div class="row">
                    <div class="form-group">
                      <label for="age">Age :</label>
                      <input type="number" id="age" name="age" required>
                    </div>
                    <div class="form-group">
                        <label for="gender">Gender :</label>
                        <select id="gender" name="gender" required>
                            <option value="" disabled selected hidden></option>
                          <option value="male">Male</option>
                          <option value="female">Female</option>
                        </select>
                      </div>
                  </div>
          
                  <!-- 下排：体重和身高 -->
                  <div class="row">
                    <div class="form-group">
                      <label for="weight">Weight (kg) :</label>
                      <input type="number" id="weight" name="weight" required>
                    </div>
                    <div class="form-group">
                      <label for="height">Height (cm) :</label>
                      <input type="number" id="height" name="height" required>
                    </div>
                  </div>
          
                  <!-- 按钮 -->
                  <div class="form-group full-width">
                    <button onclick="calculateBMI()">Calculate</button>
                  </div>
                </div>
          
                <!-- 右边显示结果区域 -->
                <div class="bmi-right">
                  <div id="bmi-result" class="result-text">Your BMI is <span style="color: #E1FF00;font-weight: bold;font-size: 27px;">20.1</span></div>
                  <div id="bmi-status" class="result-text">You are <span style="color: #E1FF00;font-weight: bold;font-size: 27px;">Normal Weight</span></div>
                </div>
              </div>
          
              <footer>
                <p>&copy; 2025 GYMWIKI. All rights reserved.</p>
              </footer>
            </main>
          </div>
        <script> 
            fetch('header.html')
                .then(response => response.text()) 
                .then(data => {
                    document.getElementById('header-placeholder').innerHTML = data;
                })
                .catch(error => console.log('Error loading header:', error));
        </script>
    </body>
</html>