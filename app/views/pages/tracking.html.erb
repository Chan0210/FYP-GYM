<!DOCTYPE html>
<html>
<head>
  <title>Tracking Page</title>
  <link rel="stylesheet" href="header.css">
  <link rel="stylesheet" href="trackingedit.css">
  <script src="https://kit.fontawesome.com/7c1ce35e86.js" crossorigin="anonymous"></script>
</head>

<body>

<div class="er-content-wrapper">
  <div class="er-container">
    <h1>Track Your Routine</h1>
    <div class="er-card">
      <div class="er-top-row">
        <div class="er-field">
          <label for="date">Date :</label>
          <input type="date" id="date" />
        </div>
        <div class="er-field">
          <label for="timeused">Time used (minutes) :</label>
          <input type="number" id="timeused" name="timeused" min="0" placeholder="e.g. 45">
        </div>
      </div>

      <div class="er-action-box">
        <span>Action 1</span>
        <div class="er-set-input">
          <label>Number of Set :</label>
          <input type="text" />
        </div>
      </div>

      <div class="er-action-box">
        <span>Action 2</span>
        <div class="er-set-input">
          <label>Number of Set :</label>
          <input type="text" />
        </div>
      </div>

      <div class="er-action-box">
        <span>Action 3</span>
        <div class="er-set-input">
          <label>Number of Set :</label>
          <input type="text" />
        </div>
      </div>

      <div class="er-button-wrapper">
        <%= link_to 'Done', routine_detail_path, class: 'er-done-button' %>
      </div>

    </div>
  </div>
</div>
</body>
</html>